{
  "variables": {
      "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
      "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
      "aws_region": "{{env `AWS_REGION`}}",
      "ssh_user" : "{{env `SSH_USER`}}",
      "ssh_user_group" : "{{env `SSH_USER_GROUP`}}"
  },
  "builders": [
      {
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "region": "{{user `aws_region`}}",
          "source_ami_filter": {
              "filters": {
                  "virtualization-type": "hvm",
                  "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
                  "root-device-type": "ebs"
              },
              "owners": [
                  "099720109477"
              ],
              "most_recent": true
          },
          "instance_type": "t2.micro",
          "ssh_username": "ubuntu",
          "ami_description": "Todo 1.0.0 Image",
          "ami_name": "todo-1.0.0-amd64-hvm-ebs-{{isotime timestamp}}",
          "tags": {
            "OS_Version": "Ubuntu",
            "Release": "1.0.0",
            "Name": "Todo-1.0.0",
            "Region": "{{user `aws_region`}}"
          }
      }
  ],
  "provisioners": [
    {
        "type": "file",
        "source": "todo.pub",
        "destination": "/tmp/todo.pub"
      },
    {
        "type": "shell",
        "script": "scripts/todo-installer.sh",
        "environment_vars": [
            "USER_GROUP={{user `ssh_user_group`}}",
            "USER={{user `ssh_user`}}"
        ]
    }
]
}
